# =============================================================================
# Rach Tours — Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit .env to version control!
# =============================================================================

PORT=3005
NODE_ENV=production
DOMAIN=rach-tours.com

# WhatsApp Business API (Meta Developer Dashboard)
WHATSAPP_TOKEN=YOUR_WHATSAPP_CLOUD_API_TOKEN
PHONE_NUMBER_ID=YOUR_PHONE_NUMBER_ID
MY_PHONE_NUMBER=YOUR_WHATSAPP_NUMBER_WITH_COUNTRY_CODE

# Google Sheets Integration
GOOGLE_SHEET_SCRIPT_URL=YOUR_GOOGLE_APPS_SCRIPT_URL
GOOGLE_SHEET_API_TOKEN=YOUR_SHEET_API_TOKEN

# MySQL Database (Hostinger)
DB_HOST=127.0.0.1
DB_USER=YOUR_DB_USERNAME
DB_PASSWORD=YOUR_DB_PASSWORD
DB_NAME=YOUR_DB_NAME

# Admin API Security — Generate strong random secrets!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
ADMIN_API_TOKEN=YOUR_STRONG_ADMIN_TOKEN
JWT_SECRET=YOUR_STRONG_JWT_SECRET_MIN_64_CHARS
JWT_REFRESH_SECRET=YOUR_STRONG_JWT_REFRESH_SECRET_MIN_64_CHARS
